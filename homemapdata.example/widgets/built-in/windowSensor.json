{
    "widgetVersion": "0.1.5",
    "iconSet": "windowSensor",
    
    "state": {
        "value": false
    },
    
    "getters": {
        "value": {
            "api": "/api/devices/${id}/properties/value",
            "path": "value"
        }
    },
    
    "events": {
        "DevicePropertyUpdatedEvent": {
            "match": "$..[?(@.id == ${id} && @.property == 'value')]",
            "updates": {
                "value": "event.newValue"
            }
        }
    },
    
    "render": {
        "icon": {
            "type": "conditional",
            "property": "value",
            "conditions": [
                { "when": "value == false", "icon": "closed" },
                { "when": "value == true", "icon": "open" }
            ]
        }
    }
}
